{
  "name": "claude-code-analytics",
  "version": "1.0.0",
  "description": "Personal usage analytics dashboard for Claude Code CLI with beautiful visualizations and detailed usage tracking",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server/index.js",
    "dev": "npx tsx src/server/index.ts",
    "dev:server": "npx tsx src/server/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:frontend\" --names \"SERVER,FRONTEND\" --prefix-colors \"blue,green\"",
    "build": "npx tsc",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "build:start": "npm run build && npm start",
    "db:reset": "psql -h localhost -p 5432 -U $USER -d claude_code_analytics -f schema.sql",
    "db:reset:claude-code-2": "psql -h localhost -p 5432 -U $USER -d claude_code_analytics -f schema-claude-code-2.sql",
    "db:connect": "psql -h localhost -p 5432 -U $USER -d claude_code_analytics",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:claude-code-2": "vitest run tests/unit/claude-code-2-parser.test.ts tests/integration/claude-code-2-api.test.ts tests/e2e/claude-code-2-dashboard.test.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "sync:claude-code-2": "npx tsx src/services/data-sync.ts --claude-code-2",
    "docker:claude-code-2": "docker-compose -f docker-compose.claude-code-2.yml up --build",
    "docker:claude-code-2:down": "docker-compose -f docker-compose.claude-code-2.yml down"
  },
  "keywords": [
    "claude-code",
    "analytics",
    "dashboard",
    "postgresql",
    "typescript",
    "tanstack"
  ],
  "author": "Stanley Nadar",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@fastify/compress": "^8.1.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/websocket": "^11.2.0",
    "dotenv": "^17.2.1",
    "fastify": "^5.5.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^1.0.0",
    "concurrently": "^9.2.1",
    "playwright": "^1.40.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0"
  }
}
